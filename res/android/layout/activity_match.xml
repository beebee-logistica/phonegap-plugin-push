<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center_vertical"
  tools:context="com.adobe.phonegap.push.match.MatchActivity">

  <ProgressBar
    android:id="@+id/progressBar"
    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="0dp"
    android:max="30000"
    android:progress="30000"
    android:progressBackgroundTint="@color/colorPrimary"
    android:progressTint="@color/colorAccent" />

  <RelativeLayout
    android:id="@+id/fullscreen_content_controls"
    style="?metaButtonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/progressBar"
    android:background="#FFF"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerInParent="true"
      android:layout_marginHorizontal="@dimen/default_spacing"
      android:layout_marginTop="30dp"
      android:orientation="horizontal"
      android:id="@+id/layout_pre_header">
      <TextView
        android:id="@+id/order_type_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_weight=".3"
        android:textSize="16sp"
        android:text="Rota Fixa"
        android:textAllCaps="true"
        android:textStyle="bold"/>
      <TextView
        android:id="@+id/order_route_summary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_weight=".7"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:text="200 PONTOS - 2000KM - 1250MIN"
        android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/layout_header"
      android:layout_below="@id/layout_pre_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/default_spacing"
      android:layout_marginTop="10dp"
      android:gravity="center"
      android:background="@drawable/yellow_badge"
      android:padding="@dimen/default_spacing"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
          android:id="@+id/icon_category"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="-10dp"
          android:text="C"
          android:textSize="50sp" />

        <TextView
          android:id="@+id/category_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxWidth="150dp"
          android:layout_marginTop="-10dp"
          android:layout_gravity="center"
          android:textAlignment="center"
          android:text="CARGO"
          android:textSize="16sp"
          android:textStyle="bold" />
      </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">
        <TextView
          android:id="@+id/freight_type_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="textEnd"
          android:textStyle="bold"
          android:textSize="30sp"
          android:text="Imediato"/>
        <TextView
          android:id="@+id/schedule_date_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="textEnd"
          android:textStyle="bold"
          android:textSize="18sp"
          android:visibility="gone"
          android:text="20/05/2020 18:00"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/layout_gray"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout_header"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="@dimen/default_spacing"
      android:layout_marginRight="@dimen/default_spacing"
      android:layout_marginTop="@dimen/default_spacing"
      android:background="@drawable/gray_badge"
      android:paddingHorizontal="10dp"
      android:orientation="horizontal">
      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="@dimen/default_spacing"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
          android:id="@+id/initial_value_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/darkGray"
          android:textStyle="bold"
          android:textSize="14sp"
          android:visibility="gone"
          android:text="VALOR MÍNIMO"/>
        <TextView
          android:id="@+id/driver_commission_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textSize="28sp"
          android:text="R$2000,78"/>
      </LinearLayout>
      <TextView
        android:id="@+id/layout_gray_divider"
        android:layout_marginTop="-10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80sp"
        android:textColor="@color/gray"
        android:paddingBottom="5dp"
        android:text="{"/>
      <LinearLayout
        android:id="@+id/layout_cost_extras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
          android:id="@+id/dynamic_cost_text"
          android:layout_marginVertical="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:textStyle="bold"
          android:textSize="14sp"
          android:text="+ KM EXCEDENTE AO MÍNIMO"/>
        <TextView
          android:id="@+id/driver_bonus_text"
          android:layout_marginVertical="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:textStyle="bold"
          android:textSize="14sp"
          android:text="+ R$10,00 (BÔNUS)"/>
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout_gray"
      android:id="@+id/layout_divider"
      android:orientation="vertical">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:gravity="center"
        android:id="@+id/total_value_text"
        android:visibility="gone"
        android:text="ROTA LIVRE: O valor total do frete será calculado no final da corrida."/>

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/default_spacing"
        android:background="@color/gray"></View>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/layout_origin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout_divider"
      android:layout_marginHorizontal="@dimen/default_spacing"
      android:orientation="vertical">

      <TextView
        android:id="@+id/badge_origin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/yellow_badge"
        android:baselineAligned="false"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="0dp"
        android:text="@string/origin"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/origin_text"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:text="R. Constante Sodré, 476 - Santa Lúcia, Vitória - ES, 29056-310, Brasil"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/layout_destination"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout_origin"
      android:layout_above="@id/layout_buttons"
      android:layout_marginHorizontal="@dimen/default_spacing"
      android:layout_marginBottom="@dimen/default_spacing"
      android:layout_marginTop="25dp"
      android:visibility="visible"
      android:orientation="vertical">

      <TextView
        android:id="@+id/badge_destination"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/yellow_badge"
        android:baselineAligned="false"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="0dp"
        android:text="@string/destination"
        android:textStyle="bold" />

      <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp">

        <TextView
          android:id="@+id/destination_text"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:textSize="15sp"
          android:text="R. Constante Sodré, 476 - Santa Lúcia, Vitória - ES, 29056-310, Brasil"/>

      </ScrollView>

    </LinearLayout>

    <LinearLayout
      android:baselineAligned="false"
      android:id="@+id/layout_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_margin="0dp"
      android:orientation="horizontal"
      android:padding="0dp">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorPrimary">

        <Button
          android:id="@+id/button_reject"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?android:attr/selectableItemBackground"
          android:text="@string/button_reject"
          android:textColor="#FFFFFF" />

      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorAccent">

        <Button
          android:id="@+id/button_accept"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?android:attr/selectableItemBackground"
          android:text="@string/button_accept" />

      </LinearLayout>

    </LinearLayout>

    <com.adobe.phonegap.push.match.SlideButton
      android:id="@+id/slide_button"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="-1dp"
      android:layout_marginStart="0dp"
      android:layout_marginTop="0dp"
      android:progressDrawable="@android:color/transparent"
      android:clickable="false"
      android:thumbOffset="0dp"
      android:thumb="@drawable/slide_thumb" />

  </RelativeLayout>

</RelativeLayout>
