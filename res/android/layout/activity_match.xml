<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center_vertical"
  tools:context="com.adobe.phonegap.push.match.MatchActivity">

  <ProgressBar
    android:id="@+id/progressBar"
    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="15dp"

    android:layout_marginRight="15dp"
    android:max="30000"
    android:progress="30000"
    android:progressBackgroundTint="@color/colorPrimary"
    android:progressTint="@color/colorAccent" />

  <RelativeLayout
    android:id="@+id/fullscreen_content_controls"
    style="?metaButtonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_below="@id/progressBar"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#FFF"
    android:orientation="horizontal"
    tools:ignore="UselessParent">

    <LinearLayout
      android:id="@+id/layout_img"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="10dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/icon_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_marginBottom="-10dp" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/details"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout_img"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/layout_yellow"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/details"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:background="@drawable/yellow_badge"
      android:padding="10dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/locations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone" />

      <TextView
        android:id="@+id/freight_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp" />

      <TextView
        android:id="@+id/route"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:textAlignment="center"
        android:textSize="20sp" />

    </LinearLayout>

    <TextView
      android:id="@+id/schedule_date"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout_yellow"
      android:textAlignment="center"
      android:textSize="18sp"
      android:textStyle="bold"
      android:visibility="invisible" />

    <LinearLayout
      android:id="@+id/layout_origin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/schedule_date"
      android:layout_margin="10dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/badge_origin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/yellow_badge"
        android:baselineAligned="false"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/origin"
        android:textAlignment="center"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
      android:id="@+id/layout_destination"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/layout_origin"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:visibility="invisible"
      android:orientation="vertical">

      <TextView
        android:id="@+id/badge_destination"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/yellow_badge"
        android:baselineAligned="false"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/destination"
        android:textAlignment="center"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/destination_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="15sp" />

    </LinearLayout>

    <!--<com.adobe.phonegap.push.match.SlideButton-->
      <!--android:id="@+id/slide_button"-->
      <!--android:layout_width="match_parent"-->
      <!--android:layout_height="50dp"-->
      <!--android:layout_alignParentBottom="true"-->
      <!--android:layout_centerHorizontal="true"-->
      <!--android:layout_marginBottom="10dp"-->
      <!--android:layout_marginLeft="10dp"-->
      <!--android:layout_marginTop="10dp"-->
      <!--android:background="@drawable/slide_background"-->
      <!--android:progressDrawable="@android:color/transparent"-->
      <!--android:clickable="false"-->
      <!--android:thumbOffset="0dp"-->
      <!--android:thumb="@drawable/slide_thumb" />-->

    <LinearLayout
      android:baselineAligned="false"
      android:id="@+id/layout_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_margin="0dp"
      android:orientation="horizontal"
      android:padding="0dp">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorPrimary">

        <Button
          android:id="@+id/button_reject"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?android:attr/selectableItemBackground"
          android:text="@string/button_reject"
          android:textColor="#FFFFFF" />

      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_accept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorAccent">

        <Button
          android:id="@+id/button_accept"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?android:attr/selectableItemBackground"
          android:text="@string/button_accept" />

      </LinearLayout>

    </LinearLayout>
  </RelativeLayout>

</RelativeLayout>
